@model IEnumerable<Cumulative1.Models.Student>
@{
    ViewBag.Title = "Student List";
}

<div class="container mt-4">
    <h2>Student List</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <a href="/StudentPage/New" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Add New Student
    </a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Student Number</th>
                    <th>Enrollment Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.StudentId</td>
                        <td>@student.StudentFname</td>
                        <td>@student.StudentLname</td>
                        <td>@student.StudentNumber</td>
                        <td>@student.EnrolDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a href="/StudentPage/Show/@student.StudentId" class="btn btn-info btn-sm">View</a>
                            <a href="/StudentPage/Edit/@student.StudentId" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/StudentPage/DeleteConfirm/@student.StudentId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">No students found in the database.</div>
    }
</div>