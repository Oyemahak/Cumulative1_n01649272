@model IEnumerable<Cumulative1.Models.Teacher>
@{
    ViewBag.Title = "List";
}

<div id="containerlist">
    <h2>List of Teachers</h2>

    <!-- Search Form with Date Range -->
    <form action="/TeacherPage/List" method="GET" class="form-inline mb-4">
        <div class="form-group mr-2">
            <label for="SearchKey">Search:</label>
            <input type="text" name="SearchKey" id="SearchKey" autocomplete="off"
                   value="@Request.QueryString["SearchKey"]" class="form-control" />
        </div>

        <div class="form-group mr-2">
            <label for="MinHireDate">Hired After:</label>
            <input type="date" name="MinHireDate" id="MinHireDate" class="form-control"
                   value="@Request.QueryString["MinHireDate"]" />
        </div>

        <div class="form-group mr-2">
            <label for="MaxHireDate">Hired Before:</label>
            <input type="date" name="MaxHireDate" id="MaxHireDate" class="form-control"
                   value="@Request.QueryString["MaxHireDate"]" />
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <!-- Teacher Table -->
    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Hire Date</th>
                    <th>Salary</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.TeacherId</td>
                        <td>@teacher.TeacherFname @teacher.TeacherLname</td>
                        <td>@teacher.HireDate.ToString("yyyy-MM-dd")</td>
                        <td>@teacher.Salary.ToString("C")</td>
                        <td><a href="/TeacherPage/Show/@teacher.TeacherId" class="btn btn-info btn-sm">Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">No teachers found matching your criteria.</div>
    }
</div>