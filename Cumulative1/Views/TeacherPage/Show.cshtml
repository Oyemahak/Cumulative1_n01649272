@model Cumulative1.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<div id="containershow" class="container mt-4">
    <nav class="mb-3">
        <a href="/TeacherPage/List" class="btn btn-outline-secondary">Back To Teachers</a>
        <a href="/TeacherPage/Edit/@Model.TeacherId" class="btn btn-warning">Edit</a>
    </nav>

    @if (Model == null)
    {
        <div class="alert alert-danger">
            <h2>Error</h2>
            <p>No teacher information could be found.</p>
        </div>
    }
    else
    {
        <h2>Teacher Information</h2>

        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title">@Model.TeacherFname @Model.TeacherLname</h3>

                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.TeacherId</dd>

                    <dt class="col-sm-3">Employee Number:</dt>
                    <dd class="col-sm-9">@Model.EmployeeNumber</dd>

                    <dt class="col-sm-3">Hire Date:</dt>
                    <dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-3">Salary:</dt>
                    <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Courses</h4>
            </div>
            <div class="card-body">
                @if (Model.Courses != null && Model.Courses.Any())
                {
                    <ul class="list-group">
                        @foreach (var course in Model.Courses)
                        {
                            <li class="list-group-item">
                                <strong>@course.CourseCode</strong> - @course.CourseName
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="alert alert-info">No courses assigned to this teacher.</div>
                }
            </div>
        </div>
    }
</div>