@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h1 class="alert-heading">Error</h1>
        <h3>@Model.Exception.GetType().Name</h3>
        <p>@Model.Exception.Message</p>

        @if (Model.Exception.InnerException != null)
        {
            <div class="mt-3">
                <h4>Additional details:</h4>
                <p>@Model.Exception.InnerException.Message</p>
            </div>
        }

        <hr>
        <p class="mb-0">
            Controller: @Model.ControllerName | Action: @Model.ActionName
        </p>
    </div>

    <div class="mt-3">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">Go Back</a>
        <a href="/" class="btn btn-primary">Home Page</a>
    </div>
</div>